#
CC=gcc
CPP=cpp
CXX=g++
OPTIM +=  -DHAS_VSNPRINTF -DHAS_STDINT_H -DHAS_INTTYPES_H -DHAS_READDIR_R -DHAS_UINT16_T -DHAS_LONG_LONG -DHAS_SYS_TYPES_H -ftree-vectorize -minline-stringops-dynamically -ffast-math -minline-stringops-dynamically -mmmx -m3dnow -msse -msse2
