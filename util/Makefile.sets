CC=gcc-4.2
CPP=cpp-4.2
CXX=g++-4.2
OPTIM +=  -ftree-vectorize
CPPFLAGS +=  -fopenmp -DUSE_PTHREADS=0 -DHASH_MAP=1
LDFLAGS +=  -fopenmp
